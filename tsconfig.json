{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "types": ["cypress", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "src": ["./src/"],
      "stories": ["./stories/"],
      "storybook/preview": ["./.storybook/preview"],
      "storybook/components": ["./.storybook/components"]
    }
  }
}
